@model MVC.Models.CategoriesView
<div class="row">
    <div class="col-md-12">
        @Html.HiddenFor(d => d.CategoryID)

        <div>
            @Html.LabelFor(d => d.CategoryName)
            @Html.TextBoxFor(d => d.CategoryName, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.CategoryName, null, new { @class = "red" })
        </div>
        <div>
            @Html.LabelFor(q => q.Description)
            @Html.TextBoxFor(q => q.Description, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(q => q.Description, null, new { @class = "red" })
        </div>
    </div>
    <br />
    <div style="text-align:right;">
        <input type="submit" class="btn btn-primary" value="Save" onclick = "return confirm('Esta seguro que quiere guardar los cambios?')" />
    </div>
</div>
